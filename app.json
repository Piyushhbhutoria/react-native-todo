{
  "expo": {
    "name": "Todays task",
    "description": "Simple todo app",
    "slug": "todays-task-app",
    "owner": "piyushhb",
    "privacy": "public",
    "platforms": [
      "ios",
      "android"
    ],
    "githubUrl": "https://github.com/Piyushhbhutoria/react-native-todo",
    "primaryColor": "#fff",
    "version": "1.0.0",
    "orientation": "portrait",
    "androidStatusBar": {
      "barStyle": "light-content"
    },
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.piyushh.todaystask"
    }
  }
}
